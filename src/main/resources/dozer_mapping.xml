<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://dozer.sourceforge.net
   http://dozer.sourceforge.net/schema/beanmapping.xsd">
    
   <mapping >
      <class-a>in.andonsystem.dto.IssueDto</class-a>
      <class-b>in.andonsystem.entity.Issue</class-b>

      <field custom-converter="in.andonsystem.dozer.convertor.IntegerLineConvertor">
         <a>lineNo</a>
         <b>line</b>
      </field>
      <field custom-converter="in.andonsystem.dozer.convertor.IntegerSectionConvertor">
         <a>secId</a>
         <b>section</b>
      </field>
      
      <field custom-converter="in.andonsystem.dozer.convertor.IntegerProblemConvertor">
         <a>probId</a>
         <b>problem</b>
      </field>
      
   </mapping>

   
</mappings>